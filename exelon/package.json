{
  "name": "personal-finance-app",
  "version": "1.0.0",
  "description": "Personal Finance Management Application with Microservices",
  "main": "index.js",
  "scripts": {
    "start": "echo 'Use docker-compose up to start all services'",
    "docs": "node services/docs/server.js",
    "dev": "concurrently \"npm run auth\" \"npm run wallet\" \"npm run transaction\" \"npm run budget\" \"npm run report\"",
    "auth": "nodemon services/auth/server.js",
    "wallet": "nodemon services/wallet/server.js",
    "transaction": "nodemon services/transaction/server.js",
    "budget": "nodemon services/budget/server.js",
    "report": "nodemon services/report/server.js"
  },
  "dependencies": {
    "express": "^4.18.2",
    "mysql2": "^3.6.0",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "amqplib": "^0.10.3",
    "redis": "^4.6.7",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "dotenv": "^16.3.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "concurrently": "^8.2.0"
  }
}